<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BusPlus" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_bg_color</item>
        <item name="colorPrimaryVariant">@color/font_color</item>
        <item name="colorOnPrimary">@color/app_bg_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#000</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar_color</item>
        <!-- Customize your theme here. -->
 <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="FullScreen" parent="Theme.BusPlus">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="Theme_Dialog" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>